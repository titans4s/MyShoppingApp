<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMenClothing">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:text="Add new product"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">





        <ImageView
            android:id="@+id/mtrouser"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/lkk" />

        <ImageView
            android:id="@+id/suits"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/lkk" />

        <ImageView
            android:id="@+id/denims"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/lkk" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/shorts"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/lkk" />


        <ImageView
            android:id="@+id/sportswear"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/lkk" />

        <ImageView
            android:id="@+id/shirts"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/lkk" />


    </LinearLayout>


</RelativeLayout>