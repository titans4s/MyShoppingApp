<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="User name"
            android:textSize="25dp"
            android:textStyle="bold"

            android:textColor="@android:color/background_light"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/order_phone"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_user_name"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="5dp"

            android:text="Phone Number"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_total_pri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Product Price"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@id/order_phone"
            android:textColor="@android:color/background_light"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Address, city"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_below="@id/order_total_pri"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Date Time"
            android:textColor="@android:color/background_light"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date_time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/background_light"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            tools:text="Show This Order Products" />

    </RelativeLayout>


</RelativeLayout>