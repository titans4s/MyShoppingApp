<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminWClothing">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:text="Add new product"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">





        <ImageView
            android:id="@+id/trouser"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/frock"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/swimsuit"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/skirt"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />


        <ImageView
            android:id="@+id/w_short"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/saree"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />


    </LinearLayout>



</RelativeLayout>