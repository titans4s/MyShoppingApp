<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp">

        <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Add new product"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/linear_category_layout"
            android:layout_width="351dp"
            android:layout_height="100dp"
            android:layout_below="@+id/slogan_category"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/trouser"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:src="@drawable/trouser" />

            <ImageView
                android:id="@+id/frock"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:src="@drawable/frock" />

            <ImageView
                android:id="@+id/swimsuit"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:src="@drawable/swim" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_category_layout1"
            android:layout_width="351dp"
            android:layout_height="100dp"
            android:layout_below="@+id/linear_category_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/shoe"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:src="@drawable/shoe" />


            <ImageView
                android:id="@+id/sunglasses"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:src="@drawable/sun" />

            <ImageView
                android:id="@+id/hat"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:src="@drawable/hat" />


        </LinearLayout>

        <Button
            android:id="@+id/maintain_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@id/check_orders_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="171dp"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:text="Maintain Products"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/check_orders_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@id/admin_logout_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="102dp"
            android:background="@drawable/buttons"
            android:text="Check New orders"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/admin_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>