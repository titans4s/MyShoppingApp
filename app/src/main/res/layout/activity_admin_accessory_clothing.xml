<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAccessoryClothing">


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:text="Add new product"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">





        <ImageView
            android:id="@+id/shoes"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/hats"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/belts"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bracelets"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />


        <ImageView
            android:id="@+id/necklaces"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:src="@drawable/skirts" />


    </LinearLayout>

    <Button
        android:id="@+id/manage_Access_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/buttons"
        android:text="Manage Products"
        android:textColor="@android:color/white">

    </Button>

</RelativeLayout>